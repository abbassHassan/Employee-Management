@model EmployeeCreateViewModel

@{
    ViewBag.Title = "Create Employee";
}

<form enctype="multipart/form-data" asp-action="Create" asp-controller="Home" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control mb-2" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control mb-2" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Departement" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Departement" class="custom-select mr-sm-2 form-control mb-2" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="" disabled selected>Please Select</option>
            </select>
            <span asp-validation-for="Departement" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control mb-2 custom-file-input" placeholder="Email" />
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary m-1">Create</button>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function (){
                $('.custom-file-input').on("change", function (){
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }



</form>






