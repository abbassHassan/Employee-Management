@model IEnumerable<Employee>

@{
    ViewBag.PageTitle = "Employee List";

}

<div class="container">
    <div class="row">
        @foreach (var employee in Model)
        {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "Guest-user.png");


            <div class="col-md-4">
                <div class="card m-3">
                    <div class="card-header text-center">
                        <h3> @employee.Name </h3>
                    </div>
                    <div class="text-center">
                        <img class="card-img m-2" src="@photoPath" asp-append-version="true" style="max-width: 200px; height: auto;" />
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                        <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
